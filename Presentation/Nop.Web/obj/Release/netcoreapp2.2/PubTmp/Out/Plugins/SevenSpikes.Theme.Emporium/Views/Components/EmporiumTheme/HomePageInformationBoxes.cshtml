@model List<SevenSpikes.Theme.Emporium.Models.InfoBoxModel>

@if (Model.Count > 0)
{
    <div class="home-page-advantages">
        @foreach (var infoBox in Model)
        {
            <div class="advantages-item">
                <div class="picture">
                    @if (!String.IsNullOrEmpty(infoBox.Url))
                    {
                        <a href="@infoBox.Url" rel="@infoBox.Title">
                            <img src="@infoBox.PictureUrl" alt="@infoBox.Title" title="@infoBox.Title" />
                        </a>
                    }
                    else {
                        <img src="@infoBox.PictureUrl" alt="@infoBox.Title" title="@infoBox.Title" />
                    }
                </div>
                <div class="info">
                    <div class="title">
                        @if (!String.IsNullOrEmpty(infoBox.Url))
                        {
                            <a href="@infoBox.Url" rel="@infoBox.Title">@infoBox.Title</a>
                        }
                        else {
                            <span>@infoBox.Title</span>
                        }
                    </div>
                    <div class="description">
                        <p>@infoBox.Text</p>
                    </div>
                </div>
            </div>
        }
    </div>
}